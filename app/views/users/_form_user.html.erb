<% provide(:title, "Signup") %>
<%= form_for @user, :html => {:class => "ui form error"} do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="two fields">
    <div class="field required">
      <%= f.label :fname, "First Name" %>
      <%= f.text_field :fname %>
    </div>
    <div class="field required">
      <%= f.label :lname, "Last Name" %>
      <%= f.text_field :lname %>
    </div>
  </div>
  <div class="field required">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="two fields">
    <div class="field required">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="field required">
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", class: "ui fluid green button" %>
  </div>
  <p><strong>Already have an account?</strong> <%= link_to 'Login', login_path %></p>
<% end %>
